@model IEnumerable<SalesWebMvc.Models.Seller>;

@{
    ViewData["Title"] = "Sellers";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create">Create</a>
</p>

<p>
    <table class="table table-hover table-condensed">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(m => m.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.BirthDate)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.BaseSalary)
                </th>
                <th>
                    Operations 
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(m => i.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => i.Email)
                </td>
                <td>
                    @Html.DisplayFor(m => i.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(m => i.BaseSalary)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@i.Id">Edit</a> | 
                    <a asp-action="Detail" asp-route-id="@i.Id">Details</a> | 
                    <a asp-action="Delete" asp-route-id="@i.Id">Delete</a>
                </td>



            </tr>
            }

        </tbody>
    </table>

</p>

